<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:background="@drawable/bg_main_gradient"
        app:use_controller="false"
        app:surface_type="texture_view"
        app:resize_mode="fill" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="matrix"
        android:visibility="gone"
        android:background="@drawable/bg_main_gradient"
        android:contentDescription="image_content" />

    <!-- Glass card showing status + version -->
    <LinearLayout
        android:id="@+id/infoCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="18dp"
        android:background="@drawable/bg_info_card"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:id="@+id/roleBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_badge"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="ROLE"
            android:textAllCaps="true"
            android:textColor="#0A0A0A"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Connecting..."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="v0.0 | build"
            android:textColor="#D0D8E5"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/wsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="ws://"
            android:textColor="#9FB4D5"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/ipText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
        android:text="IP: --"
        android:textColor="#9FB4D5"
        android:textSize="11sp" />
    </LinearLayout>

    <!-- Idle overlay -->
    <TextView
        android:id="@+id/idleOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="14dp"
        android:background="@drawable/bg_info_card"
        android:text="VideoWall · 就绪"
        android:textColor="#E6F3FF"
        android:textSize="18sp"
        android:elevation="6dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/syncBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="12dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:background="@drawable/bg_badge"
        android:text="Sync"
        android:textColor="#0A0A0A"
        android:textSize="12sp"
        android:visibility="gone"
        android:elevation="6dp" />

    <!-- Bottom control bar -->
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="18dp"
        android:gravity="center"
        android:background="@drawable/bg_bottom_bar"
        android:elevation="6dp">

        <Button
            android:id="@+id/btnRetry"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Reconnect" />

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/btnSetServer"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="设置服务器" />

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/btnCycleRole"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Role" />

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/btnDownloadApk"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="下载APK" />
    </LinearLayout>

    <!-- Cache progress (bottom-right) -->
    <FrameLayout
        android:id="@+id/cacheProgressWrap"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/cacheProgressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/cacheProgressText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:text="0%"
            android:textSize="14sp" />
    </FrameLayout>

</FrameLayout>
