<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:use_controller="false" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:contentDescription="image_content" />

    <!-- Glass card showing status + version -->
    <LinearLayout
        android:id="@+id/infoCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="16dp"
        android:background="@drawable/bg_info_card"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/roleBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_badge"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="ROLE"
            android:textAllCaps="true"
            android:textColor="#0A0A0A"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Connecting..."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="v0.0 | build"
            android:textColor="#D0D8E5"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/wsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="ws://"
            android:textColor="#9FB4D5"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/ipText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="IP: --"
            android:textColor="#9FB4D5"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- Bottom control bar -->
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="16dp"
        android:gravity="center"
        android:background="@drawable/bg_bottom_bar">

        <Button
            android:id="@+id/btnRetry"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Reconnect" />

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/btnSetServer"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="设置服务器" />

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/btnCycleRole"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Role" />
    </LinearLayout>

</FrameLayout>
